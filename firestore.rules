rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Faculty can manage their own courses
    match /courses/{courseId} {
      allow read: if request.auth != null && 
                   (resource.data.facultyId == request.auth.uid || 
                    request.auth.token.admin == true);
      allow create: if request.auth != null && request.auth.token.faculty == true;
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Faculty can manage their own quizzes
    match /quizzes/{quizId} {
      allow read: if request.auth != null && 
                   (resource.data.facultyId == request.auth.uid || 
                    request.auth.token.admin == true);
      allow create, update, delete: if request.auth != null && 
                                     request.auth.token.faculty == true && 
                                     resource.data.facultyId == request.auth.uid;
    }
  }
}