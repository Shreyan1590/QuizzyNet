rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isFaculty() {
      return isAuthenticated() && getUserRole() == 'faculty';
    }
    
    function isStudent() {
      return isAuthenticated() && getUserRole() == 'student';
    }
    
    function isCurrentUser(userId) {
      return request.auth.uid == userId;
    }

    // ===== User Profiles ===== //
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isCurrentUser(userId);
      allow update, delete: if isAdmin() || isCurrentUser(userId);
    }

    // ===== Student Data ===== //
    match /students/{studentId} {
      allow read: if isAdmin() || isFaculty() || (isStudent() && isCurrentUser(studentId));
      allow create: if isAdmin();
      allow update: if isAdmin() || isFaculty() || (isStudent() && isCurrentUser(studentId));
      allow delete: if isAdmin();
    }

    // ===== Faculty Data ===== //
    match /faculty/{facultyId} {
      allow read: if isAdmin() || (isFaculty() && isCurrentUser(facultyId));
      allow create, update, delete: if isAdmin();
    }

    // ===== Quiz System ===== //
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow create, update: if isFaculty() || isAdmin();
      allow delete: if isAdmin();
      
      match /questions/{questionId} {
        allow read: if isAuthenticated();
        allow write: if isFaculty() || isAdmin();
      }
      
      match /submissions/{submissionId} {
        allow read: if isAdmin() || isFaculty() || 
                   (isStudent() && request.auth.uid == resource.data.studentId);
        allow create: if isStudent();
      }
    }

    // ===== Course Management ===== //
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isFaculty() || isAdmin();
      
      match /enrollments/{enrollmentId} {
        allow read: if isAdmin() || isFaculty() || 
                   (isStudent() && request.auth.uid == resource.data.studentId);
        allow create: if isStudent();
        allow delete: if isAdmin() || isFaculty();
      }
    }

    // ===== Admin Dashboard ===== //
    match /analytics/{document} {
      allow read: if isAdmin() || isFaculty();
      allow write: if isAdmin();
    }
    
    // ===== System Settings ===== //
    match /system/{document} {
      allow read, write: if isAdmin();
    }
  }
}